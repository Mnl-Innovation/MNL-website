---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Analytics from "@vercel/analytics/astro";

interface Props {
	title: string;
	keywords: string;
	description: string;
}

const { title, keywords, description } = Astro.props;
---

<!doctype html>
<html class="h-full bg-white" lang="en">
	<head>
		<meta charset="UTF-8" />

		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content="MNL Innovation" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.ico" />
		<meta name="generator" content="Dashboard" />
		<title>{title}</title>
		<Analytics />
		<script
			is:inline
			src="https://challenges.cloudflare.com/turnstile/v0/api.js"
			async
			defer></script><script
			is:inline
			type="text/javascript"
			src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"
		></script><script is:inline type="text/javascript">
			(function () {
				emailjs.init({
					publicKey: "UPTtjAFANGWy6uHZi",
				});
			})();
		</script></head
	>

	<!-- Cloudflare reCAPTCHA -->

	<!-- emailjs config -->

	<!-- emailjs init -->
</html>
<body>
	<div class="bg-white">
		<Header />

		<main class="isolate">
			<slot />
		</main>

		<!-- Footer -->
		<div class="mx-auto mt-16 max-w-7xl px-6 lg:px-8">
			<Footer />
		</div>
	</div>
</body>

<style>
	@import url("https://fonts.googleapis.com/css2?family=Raleway:wght@400;700&display=swap");
	html {
		font-family: "Raleway", sans-serif;
	}
</style>

<script>
	function setupMenuToggle() {
		const navBar: HTMLElement = document.getElementById("navBar")!;
		const closeNavBar = document.getElementById("closeNavBar")!;
		const openNavBar = document.getElementById("openNavBar")!;

		closeNavBar.addEventListener("click", toggleMenu);
		openNavBar.addEventListener("click", toggleMenu);

		function toggleMenu() {
			navBar.classList.toggle("hidden");
		}
	}

	// Inicializar el menú toggle al cargar la página
	setupMenuToggle();

	// Re-enlazar eventos después de cada navegación
	document.addEventListener("astro:after-swap", () => {
		setupMenuToggle();
	});
</script>
